        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["message"],
                "properties": {
                  "message": {
                    "description": "The message to broadcast to subscribers",
                    "example": {
                      "type": "notification",
                      "userId": "user-123",
                      "content": "You have a new message"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Notification sent successfully",
