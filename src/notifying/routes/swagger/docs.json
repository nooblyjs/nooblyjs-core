    "/notify/topic/{topic}": {
      "post": {
        "tags": ["Notifications"],
        "summary": "Send a notification to a topic",
        "description": "Sends a notification message to all subscribers of a topic in the default instance.",
        "operationId": "notifyTopic",
        "parameters": [
          {
            "name": "topic",
            "in": "path",
            "required": true,
            "description": "The topic to send notification to",
