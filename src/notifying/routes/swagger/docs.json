    "/subscribe/topic/{topic}": {
      "post": {
        "tags": ["Subscriptions"],
        "summary": "Subscribe to a topic",
        "description": "Subscribes a callback URL to receive notifications from a topic in the default instance.",
        "operationId": "subscribeTopic",
        "parameters": [
          {
            "name": "topic",
            "in": "path",
            "required": true,
            "description": "The topic name to subscribe to",
            "schema": {
              "type": "string",
              "example": "user-notifications"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["callbackUrl"],
                "properties": {
                  "callbackUrl": {
                    "type": "string",
                    "format": "uri",
                    "description": "The callback URL to receive notifications",
                    "example": "https://example.com/notifications/webhook"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully subscribed to topic",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "OK"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Missing required parameters",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Bad Request: Missing topic or callback URL"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
