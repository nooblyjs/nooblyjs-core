  "paths": {
    "/topic": {
      "post": {
        "tags": ["Topic Management"],
        "summary": "Create a new notification topic",
        "description": "Creates a new notification topic for pub/sub messaging in the default instance.",
        "operationId": "createTopic",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["topic"],
                "properties": {
                  "topic": {
                    "type": "string",
                    "description": "The name of the topic to create",
                    "example": "user-notifications"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Topic created successfully",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "OK"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Missing topic parameter",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Bad Request: Missing topic"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
