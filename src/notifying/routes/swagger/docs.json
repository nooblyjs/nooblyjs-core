              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "topics": {
                      "type": "integer",
                      "description": "Total number of topics",
                      "example": 42
                    },
                    "subscribers": {
                      "type": "integer",
                      "description": "Total number of subscribers",
                      "example": 156
                    },
                    "notifications": {
                      "type": "integer",
                      "description": "Total number of notifications sent",
                      "example": 1250
                    },
                    "lastNotificationAt": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Timestamp of the last notification",
                      "example": "2024-11-05T10:30:00Z"
                    }
